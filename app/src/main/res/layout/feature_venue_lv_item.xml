<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/feature_venue_lv_item_iv"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:scaleType="fitXY"
        android:src="@drawable/yaling" />


    <TextView
        android:id="@+id/feature_venue_lv_item_loc_tv"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="96dp"
        android:text="宝力豪健身（大悦城南区）"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/feature_venue_lv_item_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feature_venue_lv_item_loc_tv"

        android:layout_marginLeft="96dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        android:text="南开区南门外大街2-6号天津大悦城南区B1啦啦啦啦啦"
        android:textColor="#6e6e6e"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/fvli_llt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/feature_venue_lv_item_iv"
        android:layout_marginLeft="96dp"
        android:orientation="horizontal">

        <RatingBar
            android:layout_width="76dp"
            android:layout_height="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="4.0"
            android:textColor="#9b9a9b"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="666条"
            android:textColor="#9b9a9b"
            android:textSize="12sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/feature_venue_lv_item_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fvli_llt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:text="500m"
        android:textColor="#9b9a9b"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/feature_venue_lv_item_distance_tv"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="28dp"
        android:src="@drawable/location_icon" />
</RelativeLayout>