<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".share.ShareActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/translucent"></LinearLayout>

    <LinearLayout
        android:id="@+id/share_cancel_llt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/partTranslucent"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/White"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="分享给好友"
            android:textColor="#9b9a9b"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/share_rlt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_tv"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_weixin"
                android:gravity="center"
                android:padding="10dp"
                android:text="微信好友"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/share_wechat_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_pengyouquan"
                android:gravity="center"
                android:padding="10dp"
                android:text="微信朋友圈"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/share_qzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_qzone"
                android:gravity="center"
                android:padding="10dp"
                android:text="QQ空间"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_qq"
                android:gravity="center"
                android:padding="10dp"
                android:text="QQ好友"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/share_rlt_1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_weibo"
                android:gravity="center"
                android:padding="10dp"
                android:text="新浪微博"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/share_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_lianjie"
                android:gravity="center"
                android:padding="10dp"
                android:text="复制链接"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_qzone"
                android:gravity="center"
                android:padding="10dp"
                android:text="QQ空间"
                android:textColor="#9b9a9b"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_qq"
                android:gravity="center"
                android:padding="10dp"
                android:text="QQ好友"
                android:textColor="#9b9a9b"
                android:textSize="10sp"
                android:visibility="invisible" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/share_xian" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_shoucang"
                android:gravity="center"
                android:padding="10dp"
                android:text="收藏"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/share_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_jubao"
                android:gravity="center"
                android:padding="10dp"
                android:text="举报"
                android:textColor="#9b9a9b"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_qzone"
                android:gravity="center"
                android:padding="10dp"
                android:text="QQ空间"
                android:textColor="#9b9a9b"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/share_qq"
                android:gravity="center"
                android:padding="10dp"
                android:text="QQ好友"
                android:textColor="#9b9a9b"
                android:textSize="10sp"
                android:visibility="invisible" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/share_xian" />

        <TextView
            android:id="@+id/share_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="17dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:text="取消"
            android:textColor="#9b9a9b"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>