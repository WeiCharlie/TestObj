<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym_coach_gv_item_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gym_coach_gv_item_iv"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/yaling" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gym_coach_gv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="教练姓名"
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/gym_coach_gv_item_tag"
            android:layout_width="38dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/use_btn_bg"
            android:gravity="center"
            android:text="田径冠军"
            android:textColor="#6e6e6e"
            android:textSize="8sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/gym_coach_gv_item_taginfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="特点标签，特点标签"
        android:textColor="#6e6e6e"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/gym_coach_gv_item_introduce"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:text="简单介绍，简单介绍介绍介绍介绍一下介绍"
        android:textColor="#6e6e6e"
        android:textSize="9sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/gym_coach_list_item_rb"
            style="@style/myratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="4"
            android:stepSize="1" />

        <TextView
            android:id="@+id/gym_coach_gv_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="4.0"
            android:textColor="@color/Black"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>