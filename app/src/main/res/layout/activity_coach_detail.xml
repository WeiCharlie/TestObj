<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details.coach.CoachDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back_coach_detail_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="backCoachDetail"
            android:padding="5dp"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/doing" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@drawable/search" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/main_line" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:background="#cfcfcf">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:src="@drawable/coach_arrow" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/coach_arrow" />

                <ImageView
                    android:id="@+id/coach_detail_avatar_iv"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="52dp"
                    android:src="@drawable/avatar_icon" />

                <TextView
                    android:layout_width="118dp"
                    android:layout_height="21dp"
                    android:layout_below="@id/coach_detail_avatar_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Melissa House" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:layout_marginRight="54dp"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:id="@+id/class_llt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/coach_detail_class_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/coach_detail_class_check" />

                        <TextView
                            android:id="@+id/coach_detail_class_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:text="运动课程"
                            android:textColor="@color/Black"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/coach_detail_class_line_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:src="@drawable/coach_short_line" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coach_llt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/coach_detail_coach_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/coach_detail_coach_uncheck" />

                        <TextView
                            android:id="@+id/coach_detail_coach_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:text="教练介绍"
                            android:textColor="@color/un_check_color"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/coach_detail_coach_line_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:src="@drawable/coach_short_line"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gym_llt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/coach_detail_gym_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/coach_detail_gym_uncheck" />

                        <TextView
                            android:id="@+id/coach_detail_gym_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:text="所属健身房"
                            android:textColor="@color/un_check_color"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/coach_detail_gym_line_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:src="@drawable/coach_short_line"
                            android:visibility="invisible" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/mine_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:paddingLeft="22dp"
                android:paddingRight="20dp"
                android:paddingTop="25dp">

                <com.doing.ace.widget.CustomScrollListView
                    android:id="@+id/coach_detail_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="20dp" />

                <RelativeLayout
                    android:id="@+id/coach_detail_coach_rlt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/yaling" />

                    <TextView
                        android:id="@+id/coach_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="125dp"
                        android:maxLines="1"
                        android:text="教练姓名"
                        android:textColor="@color/Black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/coach_tag_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/coach_name_tv"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="1dp"
                        android:maxLines="1"
                        android:text="特点标签，特点标签"
                        android:textColor="#6e6d6e"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/coach_intro_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/coach_tag_tv"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="1dp"
                        android:maxLines="3"
                        android:text="简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍"
                        android:textColor="#6e6d6e"
                        android:textSize="11dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="125dp"
                        android:orientation="horizontal">

                        <RatingBar
                            style="@style/myratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:progressTint="@android:color/holo_orange_dark"
                            android:rating="4"
                            android:stepSize="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="4.0" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/coach_detail_gym_rlt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/yaling" />

                    <TextView
                        android:id="@+id/gym_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="125dp"
                        android:maxLines="1"
                        android:text="宝力豪健身（大悦城南区）"
                        android:textColor="@color/Black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/gym_tag_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gym_name_tv"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="1dp"
                        android:maxLines="1"
                        android:text="南开区南门外大街2-6号天津大悦城区B1"
                        android:textColor="#6e6d6e"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/gym_intro_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gym_tag_tv"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="1dp"
                        android:maxLines="3"
                        android:text="简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍简单介绍"
                        android:textColor="#6e6d6e"
                        android:textSize="11dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="125dp"
                        android:orientation="horizontal">

                        <RatingBar
                            style="@style/myratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:progressTint="@android:color/holo_orange_dark"
                            android:rating="4"
                            android:stepSize="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="4.0" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mine_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="19dp"
                android:text="她的健身圈" />

            <com.doing.ace.widget.CustomScrollListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>