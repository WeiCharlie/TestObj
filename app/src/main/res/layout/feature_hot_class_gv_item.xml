<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/hot_class_list_item_iv"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/yaling" />

    <TextView
        android:id="@+id/hot_class_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/hot_class_list_item_iv"
        android:maxLines="1"
        android:text="教练姓名"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hot_class_list_item_charac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_class_list_item_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/hot_class_list_item_iv"
        android:maxLines="1"
        android:text="教练特点"
        android:textColor="#6e6e6e"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/hot_class_list_item_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_class_list_item_charac"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/hot_class_list_item_iv"
        android:maxLines="1"
        android:text="教练介绍jieshao介绍教练介绍介绍"
        android:textColor="#6e6e6e"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/hot_class_list_item_heart_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_class_list_item_iv"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/hot_class_list_item_iv">

        <RatingBar
            android:id="@+id/hot_class_list_item_rb"
            style="@style/myratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@android:color/holo_orange_dark"
            android:rating="4"
            android:stepSize="1" />

        <TextView
            android:id="@+id/hot_class_list_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/hot_class_list_item_rb"
            android:text="4.0"
            android:textColor="#6e6e6e"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/hot_class_list_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/hot_class_list_item_score"
            android:text="666条"
            android:textColor="#6e6e6e"
            android:textSize="10sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hot_class_list_item_btn"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:text="666人参加"
        android:textColor="#9b9b9b"
        android:textSize="8sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_class_list_item_iv"
        android:layout_marginTop="20dp"
        android:src="@drawable/main_line" />
</RelativeLayout>