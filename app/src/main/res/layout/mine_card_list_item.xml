<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <FrameLayout
        android:id="@+id/mine_card_item_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginLeft="24dp">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/jushi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="单次卡"
            android:textColor="#fffefe"
            android:textSize="14sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/mine_card_item_fl"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝力豪健身（大悦城南区）"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="请在2018/06/07前使用"
            android:textColor="#4a494a"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_card_item_fl"
        android:layout_marginTop="20dp"
        android:src="@drawable/mine_line" />
</RelativeLayout>